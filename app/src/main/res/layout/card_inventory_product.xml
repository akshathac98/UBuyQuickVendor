<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_product"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/img_product"
            android:text="TATA Salt Iodized 5KG"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_product_mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/tv_product_name"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@id/img_product"
            android:text="M.R.P : Rs. 19"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_product_quantity"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAlignment="textStart"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/btn_edit"
            android:text="In stock: "
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/btn_remove"
            android:background="@drawable/ic_nav_edit"
            android:backgroundTint="@color/colorPrimary"
            android:text="Edit"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btn_remove"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_dustbin"
            android:backgroundTint="@color/colorPrimary"
            android:text="Remove"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>