<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_delete"
            android:backgroundTint="@color/colorAccent"
            android:background="@drawable/ic_delete"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:id="@+id/tv_timings"
            android:text="Timings: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_alignStart="@id/tv_delivery"
            android:text="timings"
            android:layout_toEndOf="@id/tv_timings"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/tv_timings"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:id="@+id/tv_deliveries"
            android:text="Deliveries: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_delivery"
            android:text="3"
            android:layout_toEndOf="@id/tv_deliveries"
            android:layout_below="@id/tv_timings"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>